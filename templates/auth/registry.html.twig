{% extends 'base.html.twig' %}

{% block body %}
<div class="container w-50">
    <h1 class="mb-3 mt-2">Registrate</h1>
    <form action="{{ path('app_user_save_registry') }}" method="post">
        <div class="mb-3">
            <input type="email" id="email" name="_username" class="form-control" placeholder="Email" required />
        </div>
        <div class="mb-3">
            <input type="password" name="_password" class="form-control" placeholder="Contraseña" required />
        </div>
        
        <div class="mb-3">
            <button type="submit" name="button" class="btn btn-primary">Regístrate</button>
        </div>
        <div class="mb-3">
            <a href="{{ path('app_back_login') }}" type="button" name="button">Volver</a>
        </div>
    </form>
</div>
{% endblock %}